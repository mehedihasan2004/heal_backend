generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
  SUPER_ADMIN
}

enum Speciality {
  THYROID
  EYE
  NEUROLOGY
  CARDIOLOGY
  MEDICINE
  PSYCHIATRY
  DENTIST
  ORTHOPEDICS
  HAEMATOLOGY
  GYNAECOLOGY
}

enum Branch {
  BARISHAL
  CHATTOGRAM
  DHAKA
  KHULNA
  RAJSHAHI
  RANGPUR
  MYMENSINGH
  SYLHET
}

model User {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String
  role     Role   @default(PATIENT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model DoctorReview {
  id String @id @default(uuid())

  user     String
  rating   Int    @default(0)
  feedback String

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("doctorReviews")
}

model Doctor {
  id String @id @default(uuid())

  name        String
  email       String  @unique
  password    String
  contactNo   String
  image       String?
  experiences String

  speciality Speciality
  branch     Branch     @default(DHAKA)

  reviews  DoctorReview[]
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("doctors")
}

model Booking {
  id String @id @default(uuid())

  date      String
  slot      String
  name      String
  contactNo String
  email     String

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bookings")
}
